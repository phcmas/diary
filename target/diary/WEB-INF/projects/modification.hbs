{{>layout/header}}

  {{>layout/project_side}}

      <div class="col-lg-9">
        <div id="blank"></div>
        <div class="row">

            <div class="col-lg-9 col-md-7 mb-5">
            <form class="diary-container">
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{project.title}}">
            </div>
            <div class="form-group">
                <label for="title">수행기간</label>
                <input type="date" class="form-control-inline" id="start-date" value="{{project.startDate}}">
                ~
                <input type="date" class="form-control-inline" id="end-date" value="{{project.endDate}}">
            </div>
            <div class="form-group" id="member-names">
                <label for="author">참여멤버</label>
                <input type="text" class="form-control-name" id="newMember" placeholder="멤버">
                <input type="button" class="btn-add" id="add-member" value="+"><br>
            </div>
            <div class="form-group">
                <label for="author">종류</label>
                <select id="project-type" class="form-control-inline">
                    <option id="previous-type" value="{{project.projectType}}">종류
                    <option id="function-development" value="FUNCTION_DEVELOPMENT">기능개발</option>
                    <option id="performance-improvement" value="PERFORMANCE_IMPROVEMENT">성능개선</option>
                    <option id="error-resolution" value="ERROR_RESOLUTION">오류해결</option>
                </select>
            </div>
            <div class="form-group">
                <label for="situation">문제상황</label>
                <textarea class="form-control" id="situation">{{project.situation}}</textarea>
            </div>
            <div class="form-group">
                <label for="author">내용</label>
                <textarea class="form-control" id="content">{{project.content}}</textarea>
            </div>
            <div class="form-group">
                <label for="content">테스트 시나리오</label>
                <textarea class="form-control" id="test-scenario">{{project.testScenario}}</textarea>
            </div>
            </form>
                <a href="/diary/projects/cards" role="button" class="btn btn-secondary">취소</a>
                <button type="button" class="btn btn-secondary" id="btn-update" value="{{project.id}}">수정완료</button>
            </div>
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->
  <script type="text/javascript" src="http://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="js/common.js?ver=1"></script>
  <script src="js/modification.js?ver=1"></script>

{{>layout/footer}}