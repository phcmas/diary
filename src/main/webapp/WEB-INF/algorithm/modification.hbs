{{>layout/header}}
  {{>layout/algorithm_side}}

      <div class="col-lg-9">
        <div id="blank"></div>
        <div class="row">

            <div class="col-lg-9 col-md-7 mb-5">
            <form class="diary-container">
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{algorithm.title}}">
            </div>
            <div class="form-group">
                <label for="date">푼 날짜</label>
                <input type="date" class="form-control-inline" id="solved-date" value="{{algorithm.solvedDate}}">
            </div>
            <div class="form-group">
                <div class="select-inline">
                <label for="source">출처</label>
                    <select id="source" class="form-control-inline">
                        <option value="0">사이트
                        <option value="LeetCode">LeetCode</option>
                        <option value="AlgoSpot" selected>AlgoSpot</option>
                        <option value="Programmers">Programmers</option>
                        <option value="HackerRank">HackerRank</option>
                        <option value="ETC">ETC</option>
                    </select>
                </div>
                <div class ="select-inline">
                <label for="type">종류</label>
                <select id="type" class="form-control-inline">
                    <option value="0" selected>종류
                    <option value="DP">DP</option>
                    <option value="DFS">DFS</option>
                    <option value="BFS">BFS</option>
                    <option value="GREEDY">Greedy</option>
                    <option value="TWO_POINTER">Two Pointer</option>
                    <option value="HASH_TABLE">Hash Table</option>
                    <option value="HEAP">Heap</option>
                    <option value="UNION_FIND">Union Find</option>
                    <option value="ETC">ETC</option>
                </select>
                </div>
            </div>
            <div class="form-group">
                <div class="select-inline">
                <label for="language">언어</label>
                <select id="language" class="form-control-inline">
                    <option value="0" selected>언어
                    <option value="C">C</option>
                    <option value="CPP">C++</option>
                    <option value="JAVA">Java</option>
                    <option value="JAVA_SCRIPT">JavaScript</option>
                </select>
                </div>
                <div class="select-inline">
                <label for="difficulty">난이도</label>
                <select id="difficulty" class="form-control-inline">
                    <option value="0" selected>난이도
                    <option value="EASY">Easy</option>
                    <option value="MEDIUM">Medium</option>
                    <option value="HARD">Hard</option>
                </select>
                </div>
            </div>
            <div class="form-group">
                <label for="explanation">문제설명</label>
                <textarea class="form-control" id="explanation">{{algorithm.explanation}}</textarea>
            </div>
            <div class="form-group">
                <label for="content">코드내용</label>
                <textarea class="form-control" id="content">{{algorithm.content}}</textarea>
            </div>
            <div class="form-group">
                <label for="file">코드업로드</label>
                <div class="custom-file">
                <input type="file" class="custom-file-input" id="file" placeholder="파일을 업로드하세요">
                <label class="custom-file-label">파일을 선택하세요</label>
                </div>
            </div>
            </form>
                <a href="/diary/algorithm/cards" role="button" class="btn btn-secondary">취소</a>
                <button type="button" class="btn btn-secondary" id="btn-update" value="{{algorithm.id}}">수정완료</button>
            </div>
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->
  <script type="text/javascript" src="http://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="js/modification.js?ver=1"></script>

{{>layout/footer}}