{{>layout/header}}

  {{>layout/algorithm_side}}

      <div class="col-lg-9">
        <div id="blank"></div>
        <div class="row">

            <div class="col-lg-9 col-md-7 mb-5">
            <div class="diary-container">
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{algorithm.title}}">
            </div>
            <div class="form-group">
                <label for="date">푼 날짜</label>
                <input type="date" class="form-control-inline" id="solved-date" value="{{algorithm.solvedDate}}">
            </div>
            <div class="form-group">
                <div class="select-inline">
                <label for="source">출처</label>
                    <select id="source" class="form-control-inline">
                        <option id="prev-source" value="{{algorithm.source}}">사이트</option>
                        <option id="leetcode" value="LeetCode">LeetCode</option>
                        <option id="algospot" value="AlgoSpot">AlgoSpot</option>
                        <option id="programmers" value="Programmers">Programmers</option>
                        <option id="hacker-rank" value="HackerRank">HackerRank</option>
                        <option id="etc" value="ETC">ETC</option>
                    </select>
                </div>
                <div class ="select-inline">
                <label for="type">종류</label>
                <select id="type" class="form-control-inline">
                    <option id="prev-type" value="{{algorithm.type}}">종류</option>
                    <option id="dp" value="DP">DP</option>
                    <option id="dfs" value="DFS">DFS</option>
                    <option id="bfs" value="BFS">BFS</option>
                    <option id="greedy" value="GREEDY">Greedy</option>
                    <option id="two-pointer" value="TWO_POINTER">Two Pointer</option>
                    <option id="hash-table" value="HASH_TABLE">Hash Table</option>
                    <option id="heap" value="HEAP">Heap</option>
                    <option id="union-find" value="UNION_FIND">Union Find</option>
                    <option id="etc" value="ETC">ETC</option>
                </select>
                </div>
            </div>
            <div class="form-group">
                <div class="select-inline">
                <label for="language">언어</label>
                <select id="language" class="form-control-inline">
                    <option id="prev-language" value="{{algorithm.language}}">언어</option>
                    <option id="c" value="C">C</option>
                    <option id="cpp" value="CPP">C++</option>
                    <option id="java" value="JAVA">Java</option>
                    <option id="java-script" value="JAVA_SCRIPT">JavaScript</option>
                    <option id="python" value="PYTHON">Python</option>
                </select>
                </div>
                <div class="select-inline">
                <label for="difficulty">난이도</label>
                <select id="difficulty" class="form-control-inline">
                    <option id="prev-difficulty" value="{{algorithm.difficulty}}">난이도
                    <option id="easy" value="EASY">Easy</option>
                    <option id="medium" value="MEDIUM">Medium</option>
                    <option id="hard" value="HARD">Hard</option>
                </select>
                </div>
            </div>
            <div class="form-group">
                <label for="explanation">문제설명</label>
                <textarea class="form-control" id="explanation">{{algorithm.explanation}}</textarea>
            </div>
            <div class="form-group">
                <label for="content">코드내용</label>
                <textarea class="form-control" id="content">{{algorithm.content}}</textarea>
            </div>
            <div class="form-group">
                <label for="file">코드업로드</label>
                <form class="custom-file" id="code-file" enctype="multipart/form-data">
                <input type="file" class="custom-file-input" name="file" id="file-upload">
                <label class="custom-file-label" id="file-name">{{algorithm.fileName}}</label>
                </form>
            </div>
            </div>
                <button onclick="location.href='/diary/algorithm/cards'" type="button" class="btn btn-secondary"
                value="{{algorithm.fileId}}" id="btn-cancel">취소</button>
                <button type="button" class="btn btn-secondary" id="btn-update" value="{{algorithm.id}}">수정완료</button>
            </div>
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->
  <script type="text/javascript" src="http://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="js/common.js?ver=1"></script>
  <script src="js/modification.js?ver=1"></script>

{{>layout/footer}}