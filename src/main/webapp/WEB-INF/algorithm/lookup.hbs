{{>layout/header}}
  {{>layout/algorithm_side}}

      <div class="col-lg-9">
        <div id="blank"></div>
        <div class="row">

            <div class="col-lg-9 col-md-7 mb-5">
                <form class="diary-container">
                    <div class="form-group">
                        <label for="title">제목</label>
                        <input type="text" class="form-control" id="title" value="제목" readonly>
                    </div>
                    <div class="form-group">
                        <div class="select-inline">
                            <label for="date">푼 날짜</label>
                            <input type="date" class="form-control-inline"  value="2020-02-22" readonly>
                        </div>
                        <div class="select-inline">
                            <label for="source">출처</label>
                            <input type="date" class="form-control-inline"  value="2020-02-22" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class ="select-inline">
                            <label for="algorithm-type">종류</label>
                            <input type="date" class="form-control-inline"  value="2020-02-22" readonly>
                        </div>
                        <!--/div>
                        <div class="form-group"-->
                        <div class="select-inline">
                            <label for="language">언어</label>
                            <input type="date" class="form-control-inline"  value="2020-02-22" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="explanation">문제설명</label>
                        <textarea class="form-control" id="explanation" readonly>문제설명</textarea>
                    </div>
                    <div class="form-group">
                        <label for="content">코드내용</label>
                        <textarea class="form-control" id="content" readonly>코드내용</textarea>
                    </div>
                    <div class="form-group">
                        <label for="file">코드다운로드</label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="file" placeholder="파일을 업로드하세요">
                            <label class="custom-file-label">파일을 선택하세요</label>
                        </div>
                    </div>
                </form>
                <a href="/diary/algorithm/cards" role="button" class="btn btn-secondary">취소</a>
                <a href="/diary/algorithm/modification" role="button" class="btn btn-secondary">수정</a>
                <button type="button" class="btn btn-secondary" id="btn-save">등록</button>
            </div>

        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

{{>layout/footer}}